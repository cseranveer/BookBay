<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Medium.ttf</item>
    </style>
    <!--Custom bold text appearance-->
    <style name="CustomTextAppearance.Bold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Custom light text appearance-->
    <style name="CustomTextAppearance.Light" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Dosis-Light.ttf</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector_primary_color</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--Edittext signup-->
    <style name="et_signup">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>
    <!-- pills login-->
    <style name="pill">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/spacing_huge</item>
    </style>
    <!--response activity-->
    <style name="response_text">
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textStyle">italic</item>
    </style>
    <!-- verification activity-->
    <style name="verification_tv_pill">
        <item name="android:background">@drawable/pill_hollow</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/decent_black</item>
        <item name="android:layout_height">@dimen/button_height_short</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
    </style>
    <style name="otp_et">
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:gravity">center</item>

    </style>
    <!--tablayout-->
    <style name="tab_layout_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--profile completeness-->
    <style name="pill_profile_completeness">
        <item name="android:background">@drawable/pill_profile_completeness_background</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
    </style>
    <style name="et_profile_completeness">
        <item name="android:drawableRight">@drawable/height_dropdown</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_drawer_item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/spacing_xsmall</item>
        <item name="android:layout_marginLeft">@dimen/spacing_xlarge</item>
    </style>



    <style name="item_discovered_transparentbar_left">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>


        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="item_discovered_transparentbar_right">
        <item name="android:drawableLeft">@drawable/white_loc</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>

    </style>
    <style name="item_discovered_tv_over_image" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignBottom">@+id/iv_cover_image</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>


    </style>
    .
</resources>
