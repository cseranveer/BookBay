<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_marginBottom="30dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/iv_cover_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/paris" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/decent_black" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/white_loc"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="Location"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:textColor="@color/com_facebook_blue"
            android:textSize="@dimen/font_xxlarge"
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fundamentals Of Physics" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/com_facebook_blue"
                android:textSize="@dimen/font_xlarge"
                android:id="@+id/book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HC Verma" />

            <TextView
                android:textColor="@color/com_facebook_blue"
                android:textSize="@dimen/font_xlarge"
                android:id="@+id/book_catagory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Physics" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:textColor="@color/com_facebook_blue"
                android:textSize="@dimen/font_xlarge"
                android:id="@+id/book_edition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edition :" />

            <TextView
                android:textColor="@color/com_facebook_blue"
                android:textSize="@dimen/font_xlarge"
                android:id="@+id/book_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Rs" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
